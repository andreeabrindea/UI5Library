<mvc:View
    controllerName="library.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
    <Input id="title-input"
			placeholder="Title">
		</Input>
        <Input id="author-input"
			placeholder="Author">
		</Input>
        <Input id="genre-input"
			placeholder="Genre">
		</Input>
        <Input id="year-input"
			placeholder="Year"
            type="Number">
		</Input>
        <content>
            <Button
                type="Emphasized"
                id='add-book-button'
                text='Add book'
                press='addNewBook'
            />
            <Button
                type="Emphasized"
                id='update-book-button'
                text='Update book'
            />
            <Table id="books-table" selectionChange="updateBook" mode="SingleSelect">
                <columns>
                    <Column
                        id="title-column"
                        width="1vw"
                    >
                        <Text
                            id="title-text"
                            text="Title"
                        />
                    </Column>
                    <Column
                        id="author-column"
                        width="1vw"
                    >
                        <Text
                            id="author-text"
                            text="Author"
                        />
                    </Column>
                    <Column
                        id="genre-column"
                        width="1vw"
                    >
                        <Text
                            id="genre-text"
                            text="Genre"
                        />
                    </Column>
                    <Column
                        id="publication-year-column"
                        width="1vw"
                    >
                        <Text
                            id="publication-year-text"
                            text="Publication Year"
                        />
                    </Column>
                </columns>
            </Table>
        </content>
    </Page>
</mvc:View>
