<mvc:View
    controllerName="library.controller.BookDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <FlexBox
            id="flex-box-cover-book"
            direction="Column"
            alignItems="Center"
            justifyContent="Center"
        >
            <Image
                id="book-cover"
                src="{bookModel>/cover}"
                height="60vh"
            />
            <Title
                id="book-title"
                level="H1"
                text="{bookModel>/title}"
            />
        </FlexBox>
        <FlexBox
            id="flex-box-book-details"
            direction="Column"
            alignItems="Start"
            justifyContent="Center"
            class="sapUiMediumMarginBeginEnd"
        >
            <items>
                <FlexBox
                    id="flex-box-book-author-year"
                    direction="Row"
                    height="2vh"
                    justifyContent="SpaceBetween"
                    class="sapUiMediumMarginTopinBottom"
                >
                    <items>
                        <Text
                            id="_IDGenLabel4"
                            text="Written by: {bookModel>/author} "
                        />
                    </items>
                </FlexBox>
                <Text
                    id="_IDGenLabel6"
                    text="Published in {bookModel>/year}"
                />
                <Text
                    id="_IDGenLabel8"
                    text="{bookModel>/genre}"
                />
                <Text
                    id="book-description"
                    text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
            "
                />
                <FlexBox
                    id="flex-box-reviews"
                    direction="Column"
                    height="2vh"
                    justifyContent="SpaceBetween"
                    width="32vw"
                >
                    <items>
                        <RatingIndicator
                            id="book-rating-indicator"
                            maxValue="5"
                            class="sapUiSmallMarginBottom"
                            iconSize="32px"
                            tooltip="Rating Tooltip"
                            enabled="false"
                        />
                        <Label
                            id="average-rating"
                            text="{bookModel>/average}/5"
                        />
                        <Table
                            id="book-reviews"
                            width="96vw"
                            backgroundDesign="Transparent"
                            inset="true"
                            noDataText="No review yet"
                        >
                            <columns>
                                <Column id="empty-column" />
                            </columns>
                        </Table>
        
                        <FlexBox
                            id="leave-review-flexbox"
                            direction="Column"
                            width="96vw"
                        >
                            <Title
                                id="book-leave-review-title"
                                level="H1"
                                text="Leave a review"
                                class="sapUiMediumMarginTop"
                            />
                            <RatingIndicator
                                id="ratinging-indicator-leave-review"
                                maxValue="5"
                                class="sapUiSmallMarginBottom"
                                tooltip="Rating Tooltip"
                                iconSize="22px"
                            />
                            <FeedInput
                                id="user-feed-input"
                                rows="1"
                                post="onPostComment"
                                showIcon="true"
                                icon="/images/student.png"
                                maxLength="500"
                                showExceededText="true"
                                class="sapUiMediumMarginBottom"
                                placeholder="Leave your review here"
                            />
                        </FlexBox>
                    </items>
                </FlexBox>
            </items>
        </FlexBox>
    </Page>
</mvc:View>
