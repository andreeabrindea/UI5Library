<mvc:View
    controllerName="library.controller.BookDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
    <Label
                        id="label1"
                        text="{/title}"
                        width="500px"
                    />
            <FlexBox
                id="flex-box-book-details"
                direction="Column"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Label
                        id="_IDGenLabel4"
                        text="{/author}"
                    />
                    <Label
                        id="_IDGenLabel6"
                        text="{/genre}"
                    />
                    <Label
                        id="_IDGenLabel8"
                        text="{/year}"
                    />
                </items>
            </FlexBox>
    </Page>
</mvc:View>
