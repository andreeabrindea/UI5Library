<mvc:View
    controllerName="library.controller.BookDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <FlexBox
            id="flex-box-cover-book"
            direction="Column"
            alignItems="Center"
            justifyContent="Center"
        >
            <Image
                id="book-cover"
                src="{bookModel>/cover}"
                height="60vh"
            />
            <Title
                id="book-title"
                level="H1"
                text="{bookModel>/title}"
            />
        </FlexBox>
        <FlexBox
            id="flex-box-book-details"
            direction="Column"
            alignItems="Start"
            justifyContent="Center"
            class="sapUiMediumMarginBeginEnd"
        >
            <items>
                <FlexBox
                    id="flex-box-book-author-year"
                    direction="Row"
                    height="2vh"
                    justifyContent="SpaceBetween"
                    class="sapUiMediumMarginTopinBottom"
                >
                    <items>
                        <Text
                            id="_IDGenLabel4"
                            text="Written by: {bookModel>/author} "
                        />
                    </items>
                </FlexBox>
                <Text
                    id="_IDGenLabel6"
                    text="Published in {bookModel>/year}"
                />
                <Text
                    id="_IDGenLabel8"
                    text="{bookModel>/genre}"
                />
                <Text
                    id="book-description"
                    text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
            "
                />
                <FlexBox
                    id="flex-box-reviews"
                    direction="Column"
                    height="2vh"
                    justifyContent="SpaceBetween"
                    width="32vw"
                >
                    <items>
                        <RatingIndicator
                            id="book-rating-indicator"
                            maxValue="5"
                            class="sapUiSmallMarginBottom"
                            iconSize="32px"
                            tooltip="Rating Tooltip"
                            change="onHandleChange"
                        />
                        <Label
                            id="average-rating"
                            text="{bookModel>/average}/5"
                        />
                        <FlexBox
                            width="90vw"
                            backgroundDesign="Transparent"
                            class="sapUiSmallMarginTopBottom"
                            direction="Row"
                        >
                            <Image
                                src="/images/student.png"
                                height="5vh"
                            />
                            <Text
                                text="Lorem ipsum dolor st amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat"
                            />
                        </FlexBox>
                        <FlexBox
                            width="90vw"
                            backgroundDesign="Transparent"
                            class="sapUiSmallMarginTopBottom"
                            direction="Row"
                        >
                            <Image
                                src="/images/student.png"
                                height="5vh"
                            />
                            <Text
                                text="Lorem ipsum dolor st amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat"
                            />
                        </FlexBox>
                        <FlexBox direction="Column" width="95vw">
                        <Title
                            id="book-review-comment"
                            level="H1"
                            text="Leave a review"
                        />
                        <FeedInput id="user-feed-input"
                            post="onPost"
                            showIcon="true"
                            icon="/images/student.png"
                            maxLength="500"
                            showExceededText="true"
                            class="sapUiMediumMarginTopBottom"
                            placeholder="Leave your review here">

                            <!-- <TextArea id="user-input-text-area"></TextArea> -->
                        </FeedInput>
</FlexBox>                    </items>
                </FlexBox>
            </items>
        </FlexBox>
    </Page>
</mvc:View>
